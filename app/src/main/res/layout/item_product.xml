<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">

    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@string/title_product"
        android:src="@drawable/placeholder_product"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_letter_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_product"
        app:layout_constraintEnd_toEndOf="@+id/iv_product"
        app:layout_constraintStart_toStartOf="@+id/iv_product"
        app:layout_constraintTop_toTopOf="@+id/iv_product" />

    <TextView
        android:id="@+id/tv_name_product"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Pencil Alis by Neural"
        android:textColor="@color/primary_Text"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_price_product"
        app:layout_constraintStart_toEndOf="@id/iv_product"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Pencil" />

    <TextView
        android:id="@+id/tv_text_stock_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Stock"
        app:layout_constraintStart_toEndOf="@+id/iv_product"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_product" />

    <TextView
        android:id="@+id/tv_stock_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="10"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_text_stock_product"
        app:layout_constraintStart_toEndOf="@+id/tv_text_stock_product"
        app:layout_constraintTop_toTopOf="@+id/tv_text_stock_product" />

    <TextView
        android:id="@+id/tv_price_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp. 4,000"
        android:textColor="@color/secondary_text"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name_product"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Rp. 4.000" />


    <ImageView
        android:id="@+id/increment_item"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/bg_btn_circle_primary"
        android:padding="2dp"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/tv_total_product_purchases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@+id/increment_item"
        app:layout_constraintEnd_toStartOf="@+id/increment_item"
        app:layout_constraintTop_toTopOf="@+id/increment_item" />

    <ImageView
        android:id="@+id/decrement_item"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/bg_btn_circle_red"
        android:padding="2dp"
        android:src="@drawable/ic_min"
        app:layout_constraintBottom_toBottomOf="@+id/tv_total_product_purchases"
        app:layout_constraintEnd_toStartOf="@+id/tv_total_product_purchases"
        app:layout_constraintTop_toTopOf="@+id/tv_total_product_purchases"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>